# Backend 환경 변수 예시 파일
# cp Back/.env.example Back/.env 로 복사해서 사용하세요.

########################
# 데이터베이스 설정
########################

# SQLite 기본값 (변경 필요 없으면 그대로 사용)
DATABASE_URL=sqlite:///./data/students.db

########################
# Discord 설정
########################

# Discord Developer Portal → Bot 탭에서 복사 (x 형식 토큰)
DISCORD_BOT_TOKEN=YOUR_DISCORD_BOT_TOKEN_HERE

# 강사(관리자) 알림을 받을 Discord 채널 ID (정수)
INSTRUCTOR_CHANNEL_ID=YOUR_INSTRUCTOR_CHANNEL_ID_HERE

########################
# Slack 설정 (Socket Mode)
########################

# OAuth & Permissions 의 Bot User OAuth Token (xoxb-...)
SLACK_BOT_TOKEN=YOUR_SLACK_BOT_TOKEN_HERE

# Basic Information → App-Level Tokens 의 App Token (xapp-...)
SLACK_APP_TOKEN=YOUR_SLACK_APP_TOKEN_HERE

########################
# 모니터링 / 스케줄 설정
########################

# 수업 시간 (HH:MM, 24시간제, KST)
CLASS_START_TIME=10:10
CLASS_END_TIME=18:40

# 점심 시간 (HH:MM)
LUNCH_START_TIME=11:50
LUNCH_END_TIME=12:50

# 카메라 OFF 임계 시간 (분)
CAMERA_OFF_THRESHOLD=20

# 접속 종료 후 관리자 알림까지 시간 (분)
LEAVE_ALERT_THRESHOLD=20

# 복귀 요청 후 재알림까지 시간 (분)
RETURN_REMINDER_TIME=10

# 매일 상태 초기화 시간 (HH:MM, 비우면 비활성화)
DAILY_RESET_TIME=07:00